generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./cafeteria.db"
}

enum ItemType {
  cappuccino
  expresso
  coado
  frapp√©
  especiais
}

enum StatusType {
  EmPreparo
  Pronto
  Entregue
  Cancelado
}

model Pedido {
  id            Int      @id @default(autoincrement())
  cliente       String
  item          ItemType
  quantidade    Int
  observacoes   String?   
  status        StatusType    @default(EmPreparo)
}


